<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HanshinChat1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="NumberPickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="editTextBackground">@color/gray</item>
    </style>


    <style name="CustomRadioButton" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorAccent">@color/purple_100</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

</resources>