<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/sky_blue">

    <ProgressBar
        android:id="@+id/height_progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#FF69B4"
        android:max="10"
        android:progress="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상황 1"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textAlignment="center" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/simulation2"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개팅 전, 상대가 어디서 만날지 질문을 했다. \n어떻게 답장할까?"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp">
                <RadioButton
                    android:id="@+id/question1_answer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혹시 뭐 좋아하세요?"/>
                <RadioButton
                    android:id="@+id/question1_answer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="각자 생각해보고 여기에 올려볼까요?"/>
                <RadioButton
                    android:id="@+id/question1_answer3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공평하게 중간쯤 아무 식당에서 볼까요"/>
                <RadioButton
                    android:id="@+id/question1_answer4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제가 몇개 찾아봤는데, 링크 을릴게요.\n한 번 봐주실래요?"/>

            </RadioGroup>

            <Button
                android:id="@+id/next2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="다음"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:backgroundTint="@color/pink" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>