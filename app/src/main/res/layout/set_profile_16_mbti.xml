<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".SetProfile16MbtiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/mbti_progress"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressBackgroundTint="#FFFFFF"
            android:progressTint="#FF69B4"
            android:max="18"
            android:progress="16"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/set_profile_mbti"
            android:textSize="30sp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/mbti_first_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="내향형/외향형"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/mbti_e"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="E"
                        android:textSize="16sp"
                        android:button="@null"
                        android:background="@drawable/radio_button_border" />

                    <RadioButton
                        android:id="@+id/mbti_i"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="I"
                        android:textSize="16sp"
                        android:button="@null"
                        android:background="@drawable/radio_button_border" />
                </LinearLayout>
            </LinearLayout>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/mbti_second_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="직관적/감각적"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/mbti_n"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="N"
                        android:textSize="16sp"
                        android:button="@null"
                        android:background="@drawable/radio_button_border" />

                    <RadioButton
                        android:id="@+id/mbti_s"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_button_border"
                        android:button="@null"
                        android:gravity="center"
                        android:text="S"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/mbti_third_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="감정적/이성적"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/mbti_f"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="F"
                        android:textSize="16sp"
                        android:button="@null"
                        android:background="@drawable/radio_button_border" />

                    <RadioButton
                        android:id="@+id/mbti_t"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="T"
                        android:textSize="16sp"
                        android:button="@null"
                        android:background="@drawable/radio_button_border" />
                </LinearLayout>
            </LinearLayout>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/mbti_forth_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="즉흥적/계획적"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/mbti_p"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="P"
                        android:textSize="16sp"
                        android:button="@null"
                        android:background="@drawable/radio_button_border" />

                    <RadioButton
                        android:id="@+id/mbti_j"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="J"
                        android:textSize="16sp"
                        android:button="@null"
                        android:background="@drawable/radio_button_border" />
                </LinearLayout>
            </LinearLayout>
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/set_mbti_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="다음"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:backgroundTint="#BFA0ED" />
    </LinearLayout>

</LinearLayout>