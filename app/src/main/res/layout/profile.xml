<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F5EEFF">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_profile_black_24_xml"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="프로필 정보"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/baseline_menu_black_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_weight="1"
            tools:ignore="DuplicateIds">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:backgroundTint="#E6E6FA"
                android:layout_margin="40dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_person_24" />
            </androidx.cardview.widget.CardView>



            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/introduce_profile_24"
                android:layout_gravity="right"/>
        </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_weight="2"
        android:id="@+id/containers">

        <Button
            android:id="@+id/profile_edit"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="프로필 편집"
            android:textSize="20sp"
            android:backgroundTint="#BFA0ED"
            android:layout_margin="60dp"
            app:elevation="10dp"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/ideal_edit_btn"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="이상형 설정"
            android:textSize="20sp"
            android:backgroundTint="#BFA0ED"
            android:layout_margin="150dp"
            app:elevation="10dp"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/simulation"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:text="소개팅 시뮬레이션"
            android:textSize="20sp"
            android:backgroundTint="#BFA0ED"
            android:layout_margin="240dp"
            app:elevation="10dp"
            android:translationZ="10dp"
            android:stateListAnimator="@null"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"/>
    </FrameLayout>

</LinearLayout>
