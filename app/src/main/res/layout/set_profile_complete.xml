<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/set_profile_container"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_margin="20dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/set_profile_progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        style="@style/ThinProgressBar"
        android:progress="18"
        android:max="18"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/progress_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="18/18"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:textColor="#000000"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_profile_complete"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/set_profile_ideal"
            android:textSize="15sp"
            android:textColorHint="@color/gray"
            android:layout_marginTop="150dp"
            android:textColor="@color/black"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/set_later"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:text="건너뛰기"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#E6E6FA" />
        <Button
            android:id="@+id/set_now"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:text="지금 설정하기"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#E6E6FA" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
