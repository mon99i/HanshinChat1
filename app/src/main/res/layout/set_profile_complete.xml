<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_profile_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/set_profile_progress"
            style="@style/ThinProgressBar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            android:max="18"
            android:progress="18"
            android:visibility="visible" />

        <TextView
            android:id="@+id/progress_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="10dp"
            android:text="18/18"
            android:textColor="#000000"
            android:textSize="13sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_profile_complete"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="@string/set_profile_ideal"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/set_later"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="#E6E6FA"
                android:text="건너뛰기"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:id="@+id/set_now"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="#E6E6FA"
                android:text="지금 설정하기"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
