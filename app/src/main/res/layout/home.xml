<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F8F8FF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#252525"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="Home"/>


    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#CCCCCC" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="555dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/background_ideal_list_layout2"
                android:gravity="center"
                android:padding="20dp">

                <TextView
                    android:layout_width="218dp"
                    android:layout_height="109dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="나와 잘 맞는 사람을 찾아보세요 -여기는꾸밀필요있음-"
                    android:textColor="#434959"
                    android:textSize="20dp"
                    android:textStyle="bold" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/baseline_question_mark_24"
                    android:layout_gravity="left"
                    android:textColor="#434959"
                    android:textStyle="bold"
                    android:backgroundTint="#F8F8FF"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="맞춤 추천"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#F8F8FF"
                    android:drawableEnd="@drawable/baseline_moving_24"
                    android:text="프로필 공개 "
                    android:textColor="#434959"
                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableStart="@drawable/baseline_recommend_24"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:layout_marginLeft="10dp"
                android:text="맞춤 추천"
                android:textColor="#434959"
                android:textSize="20dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/idealMatchingBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/match_button_style"
                android:text="이상형 매칭" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mbtiMatchingBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/match_button_style"
                android:text="MBTI 매칭" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/aroundMatchingBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/match_button_style"
                android:text="내 주변 친구" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recentRegisterMatchingBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/match_button_style"
                android:text="새로 가입한 친구" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/recentConnectMatchingBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/match_button_style"
                android:text="오늘 접속한 친구" />




            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/topUserMatchingBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/match_button_style"
                android:text="TOP 5 매칭" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="3px"
                android:layout_marginTop="50px"
                android:layout_marginBottom="50px"
                android:background="#000000" />


        </LinearLayout>

    </ScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#F8F8FF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_home_black_24_xml"/>
        <ImageButton
            android:id="@+id/room"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_room_black_24_xml"/>
        <ImageButton
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_chat_black_24_xml"/>
        <ImageButton
            android:id="@+id/post"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_board_black_24_xml"/>
        <ImageButton
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_profile_black_24_xml"/>
    </LinearLayout>

</LinearLayout>