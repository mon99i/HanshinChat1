<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F5EEFF">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_home_black_24_xml"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="홈 화면"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@drawable/baseline_menu_black_24" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1450px">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1450px"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="오늘의 추천"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#BFA0ED"
            android:text="과팅 추천"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <Button
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:backgroundTint="#BFA0ED"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#BFA0ED"
            android:text="미팅 추천"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <Button
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:backgroundTint="#BFA0ED"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#BFA0ED"
            android:text="밥팅 추천"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <Button
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:backgroundTint="#BFA0ED"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#BFA0ED"
            android:text="기타 추천"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"/>
        <Button
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="50dp"
            android:backgroundTint="#BFA0ED"
            android:layout_marginBottom="30dp"/>

        <View
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="3px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="맞춤 추천"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/mbti_matching"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="MBTI 매칭"/>

        <Button
            android:id="@+id/ideal_type_matching"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="이상형 매칭"/>

        <Button
            android:id="@+id/friend_around_matching"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="내 주변 친구"/>

        <Button
            android:id="@+id/top_user_matching"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="상위 5% 매칭"/>

        <View
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="3px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"/>

    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_home_black_24_xml"/>
        <ImageButton
            android:id="@+id/room"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_room_black_24_xml"/>
        <ImageButton
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_chat_black_24_xml"/>
        <ImageButton
            android:id="@+id/post"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_board_black_24_xml"/>
        <ImageButton
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_profile_black_24_xml"/>
    </LinearLayout>

</LinearLayout>