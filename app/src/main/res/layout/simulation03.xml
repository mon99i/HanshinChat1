<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/baseline_arrow_back" />
        <ImageButton
            android:id="@+id/home_btn"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="310dp"
            android:background="@drawable/baseline_home_black_24_xml" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/black"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/simulation_background">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#FF69B4"
        android:max="10"
        android:progress="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/simulation3"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="소개팅 당일, 약속 시간에 조금 늦을 거 같다. 어쩌지?"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/question_radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:id="@+id/answer1_btn"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="미리 도착 예정 시간을 솔직하게 상대에게 알린다"
                    android:textSize="14sp"
                    android:button="@null"
                    android:background="@drawable/radio_button_border" />

                <RadioButton
                    android:id="@+id/answer2_btn"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="조금 늦을 수도 있다고 넌지시 상대에게 말한다"
                    android:textSize="14sp"
                    android:button="@null"
                    android:background="@drawable/radio_button_border" />

                <RadioButton
                    android:id="@+id/answer3_btn"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="상대에게 전전히 오라고 말한다"
                    android:textSize="14sp"
                    android:button="@null"
                    android:background="@drawable/radio_button_border" />

                <RadioButton
                    android:id="@+id/answer4_btn"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="괜히 늦는다고 말하기 보단 가는 데에 집중한다"
                    android:textSize="14sp"
                    android:button="@null"
                    android:background="@drawable/radio_button_border" />

            </RadioGroup>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next_btn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/match_button_style"
                android:text="다음"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

