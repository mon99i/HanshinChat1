<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myChatBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/my_changed_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#bdbdbd"
        android:background="@drawable/background_ideal_list_layout2"
        android:padding="5dp"
        android:text="1999년 1월 1일"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/my_txt_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:autoLink="web"
        android:background="@drawable/background_talk_mine"
        android:gravity="start|center_vertical"
        android:linksClickable="true"
        android:maxEms="15"
        android:padding="10dp"
        android:text="안녕하세요."
        android:textColor="#5F5F5F"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/my_txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="오전 10:23"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="@+id/my_txt_message"
        app:layout_constraintEnd_toStartOf="@+id/my_txt_message"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/my_txt_message"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txt_isShown"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFBE3C"
        android:textSize="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/my_txt_message"
        app:layout_constraintTop_toTopOf="@+id/my_txt_message"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>

