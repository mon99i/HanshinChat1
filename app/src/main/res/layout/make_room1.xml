<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".RoomActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">
            <Button
                android:id="@+id/btn_makeRoom"
                android:layout_width="80dp"
                android:layout_height="37dp"
                android:text="방 생성"
                android:onClick="onCreateButtonClick"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginLeft="220dp"
                android:backgroundTint="#E6E6FA" />
        <ImageView
            android:id="@+id/make_room_cancel"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:clickable="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/baseline_close_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/room_category"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="과팅"
            android:background="@drawable/icon2"/>
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginBottom="20dp">
                <EditText
                    android:id="@+id/edt_roomTitle"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:hint="방 제목을 입력하세요."
                    android:layout_marginLeft="10dp" />
                <Spinner
                    android:id="@+id/participants_spinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="end"
                    style="@style/SpinnerStyle"/>
           </LinearLayout>
        </LinearLayout>
</LinearLayout>