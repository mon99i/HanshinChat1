<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_profile_form"
        android:textSize="25sp"
        android:textColor="@color/black"/>
    <RadioGroup
        android:id="@+id/form_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            android:padding="22dp">

            <RadioButton
                android:id="@+id/form_radio_btn_1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_button_border"
                android:button="@null"
                android:gravity="center"
                android:text="마른"
                android:textSize="16sp" />


            <RadioButton
                android:id="@+id/form_radio_btn_2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_button_border"
                android:button="@null"
                android:gravity="center"
                android:text="통통"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/form_radio_btn_3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_button_border"
                android:button="@null"
                android:gravity="center"
                android:text="탄탄"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/form_radio_btn_4"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/radio_button_border"
                android:button="@null"
                android:gravity="center"
                android:text="평범"
                android:textSize="16sp" />
        </GridLayout>
    </RadioGroup>
</FrameLayout>
