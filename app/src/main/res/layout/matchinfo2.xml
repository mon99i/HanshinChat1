<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:background="@drawable/match_textview">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_gender"
                android:text="성별"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"
                />

            <TextView
                android:id="@+id/match_age"
                android:text="나이"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_department"
                android:text="학과"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/match_grade"
                android:text="학년"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_height"
                android:text="키"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/match_form"
                android:text="체형"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_address"
                android:text="거주지"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/match_religion"
                android:text="종교"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:backgroundTint="#000000"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/match_smoking"
                android:text="흡연"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/match_drinking"
                android:text="음주"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_width="175dp"
                android:layout_height="match_parent"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>