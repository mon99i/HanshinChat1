<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/sky_blue">

    <ProgressBar
        android:id="@+id/height_progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#FF69B4"
        android:max="10"
        android:progress="9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상황 9"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/simulation10"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취미 이야기를 했는데, 둘이 겹치는 취미가 하나도 없었다.\n당신의 반응은?"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <RadioGroup
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/question9_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX씨 취미가 다 재밌어보여서 저도 해보고 싶어요"/>
            <RadioButton
                android:id="@+id/question9_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취미는 앞으로 같이 만들면 되죠."/>
            <RadioButton
                android:id="@+id/question9_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그러게요, 아쉽지만 어쩔 수 없죠."/>
            <RadioButton
                android:id="@+id/question9_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안그래도 새로운 취미를 요즘 계속 찾고 있어요."/>
        </RadioGroup>

        <Button
            android:id="@+id/next10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="다음"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:backgroundTint="@color/pink" />
    </LinearLayout>
</LinearLayout>
