<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F8F8FF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#252525"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:text="설정"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:gravity="center">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="아는 사람 만나지 않기"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="#E6E6FA"/>

        <View
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="3px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="고객문의"
            android:textColor="#000000"
            android:backgroundTint="#E6E6FA"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="서비스 이용 약관"
            android:textColor="#000000"
            android:backgroundTint="#E6E6FA"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="자주 하는 질문"
            android:textColor="#000000"
            android:backgroundTint="#E6E6FA"/>

        <View
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="3px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="계정 관리"
            android:textColor="#000000"
            android:backgroundTint="#E6E6FA"/>
        <Button
            android:id="@+id/reportBtn"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="신고하기"
            android:textColor="#000000"
            android:backgroundTint="#E6E6FA"/>
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="로그아웃"
            android:textColor="#000000"
            android:backgroundTint="#E6E6FA"/>

        <View
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="3px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"/>

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:text="계정 탈퇴"
            android:textColor="#000000"
            android:backgroundTint="#E6E6FA"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_home_black_24_xml"/>
        <ImageButton
            android:id="@+id/room"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_room_black_24_xml"/>
        <ImageButton
            android:id="@+id/chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_chat_black_24_xml"/>
        <ImageButton
            android:id="@+id/post"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_board_black_24_xml"/>
        <ImageButton
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/baseline_profile_black_24_xml"/>

    </LinearLayout>

</LinearLayout>