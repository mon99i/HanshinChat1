<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".SetProfile3GenderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/height_progress"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_margin="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressBackgroundTint="#FFFFFF"
            android:progressTint="#FF69B4"
            android:max="18"
            android:progress="2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/set_profile_gender"
            android:textSize="30sp"
            android:textColor="#000000"/>

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:orientation="horizontal"
            android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/set_profile_gender_male"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/set_profile_gender_male_selector"
                    android:onClick="onRadioButtonClicked"
                    android:button="@null"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/set_profile_gender_female"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@drawable/set_profile_gender_female_selector"
                    android:onClick="onRadioButtonClicked"
                    android:button="@null"
                    android:layout_weight="1"/>
        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/set_gender_next"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:text="다음"
        android:layout_margin="20dp"
        android:backgroundTint="#BFA0ED" />

</LinearLayout>