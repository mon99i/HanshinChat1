<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MakeRoomActivity4">

    <LinearLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F8F8FF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#252525"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="MAKE ROOM"/>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:columnCount="2"
        android:rowCount="3"
        android:background="@drawable/grid_border">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방 제"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/edt_roomTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="방 제목을 입력하세요."
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/participants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인원수"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/participants_spinner1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/SpinnerStyle"/>

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원하는 상대"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/gender_spinner1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            style="@style/SpinnerStyle"/>
    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_makeRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방 생성"
            android:onClick="onCreateButtonClick"
            android:textColor="@color/black"
            android:gravity="center"
            android:backgroundTint="#E6E6FA" />
    </LinearLayout>

</LinearLayout>