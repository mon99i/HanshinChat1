<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/sky_blue">

    <ProgressBar
        android:id="@+id/height_progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#FF69B4"
        android:max="10"
        android:progress="8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상황 8"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/simulation9"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="술집에 들어오자마자 갑자기 정적이 찾아왔다.\n무엇이 좋을까?"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <RadioGroup
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/question8_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다른 곳을 응시하고, 좋네요라고 말한다"/>
            <RadioButton
                android:id="@+id/question8_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지그시 바라보며 약간의 미소를 짓는다"/>
            <RadioButton
                android:id="@+id/question8_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상대에 대한 질문을 만들어 물어본다."/>
            <RadioButton
                android:id="@+id/question8_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어색하네요 술은 언제나오지..? 라며 웃는다"/>

        </RadioGroup>

        <Button
            android:id="@+id/next9"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="다음"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:backgroundTint="@color/pink" />
    </LinearLayout>
</LinearLayout>
