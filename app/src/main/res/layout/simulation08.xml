<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/sky_blue">

    <ProgressBar
        android:id="@+id/height_progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="10dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressBackgroundTint="#FFFFFF"
        android:progressTint="#FF69B4"
        android:max="10"
        android:progress="7"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상황 7"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/simulation8"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2차로 술 한 잔 하기로 했다. 어떤 장소가 좋을까?"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>

        <RadioGroup
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/question7_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="통나무 인테리어가 인상적인 호프집"/>
            <RadioButton
                android:id="@+id/question7_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연인들로 붐비는 와인바"/>
            <RadioButton
                android:id="@+id/question7_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="대학교 미팅이 한창인 룸술집"/>
            <RadioButton
                android:id="@+id/question7_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="조금은 어두운 칵테일바"/>

        </RadioGroup>

        <Button
            android:id="@+id/next8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="다음"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:backgroundTint="@color/pink" />
    </LinearLayout>
</LinearLayout>
